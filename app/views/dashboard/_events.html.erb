<section id='events-container' data-magellan-target='events-container'>
  <div class='medium-8 columns row'>
    <h2 class='hide'>Events</h2>
    <% if @meetup_upcoming_events.present? %>
      <h3 id='upcoming-events-title'><i class='fa fa-star-o' aria-hidden='true'></i> Upcoming Events</h3>
      <% @meetup_upcoming_events.each do |meetup_upcoming_event| %>
        <article>
          <header>
            <h4><%= link_to meetup_upcoming_event.raw_data['name'], meetup_upcoming_event.raw_data['event_url'], target: :_blank %></h4>
            <small class='subheader'><i class='fa fa-calendar' aria-hidden='true'></i> <%= distance_of_time_in_words_to_now(meetup_upcoming_event.time) %> from now</small>
          </header>
          <p><%= strip_tags(meetup_upcoming_event.raw_data['description']).truncate(300) %></p>
        </article>
      <% end %>
    <% end %>
    <% if @meetup_past_events.present? %>
      <h3 id='past-events-title'>Past Events</h3>
      <% @meetup_past_events.each do |meetup_past_event| %>
        <article>
          <header>
            <h4><%= link_to meetup_past_event.raw_data['name'], meetup_past_event.raw_data['event_url'], target: :_blank %></h4>
            <small class='subheader'><i class='fa fa-calendar' aria-hidden='true'></i> <%= time_ago_in_words(meetup_past_event.time) %> ago</small>
          </header>
          <p><%= strip_tags(meetup_past_event.raw_data['description']).truncate(300) %></p>
          <div class='orbit' role='region' aria-label="<%= meetup_past_event.raw_data['name'] %>" data-orbit>
            <ul class='orbit-container'>
              <button class='orbit-previous'><span class='show-for-sr'>Previous Slide</span>&#9664;&#xFE0E;</button>
              <button class='orbit-next'><span class='show-for-sr'>Next Slide</span>&#9654;&#xFE0E;</button>
              <% @meetup_event_photos[meetup_past_event.raw_data['id']].each do |meetup_event_photo| %>
                <li class='is-active orbit-slide'>
                  <%= image_tag meetup_event_photo.photo_link, class: 'orbit-image' %>
                  <% if meetup_event_photo.caption.present? %>
                    <figcaption class='orbit-caption'><%= meetup_event_photo.caption %></figcaption>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
          <br>
          <% meetup_past_event.presentation_embeds.each do |presentation_embed| %>
            <div class='flex-video'>
              <%= presentation_embed.html_safe %>
            </div>
          <% end %>
          <% if meetup_past_event.links.present? %>
            <h5>Resources</h5>
            <ul>
              <% meetup_past_event.links.each do |link| %>
                <li><%= link_to link, link, target: :_blank %></li>
              <% end %>
            </ul>
          <% end %>
          <% if meetup_past_event.sponsors.present? %>
            <h5>Sponsors</h5>
            <ul class='no-ul-style'>
              <% meetup_past_event.sponsors.each do |sponsor| %>
                <li class='small-12 medium-8 large-6 small-centered'><%= link_to image_tag(sponsor.image), sponsor.link, target: :_blank %></li>
              <% end %>
            </ul>
          <% end %>
        </article>
      <% end %>
    <% end %>
  </div>
</section>